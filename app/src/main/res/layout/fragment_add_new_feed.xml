<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/materialize_screen_edge">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/feed_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textUri"
            android:hint="@string/feed_url" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder"
        android:layout_marginTop="@dimen/materialize_spacing"
        android:layout_marginStart="@dimen/materialize_baseline_grid_small"
        android:layout_marginLeft="@dimen/materialize_baseline_grid_small"
        android:textAppearance="@style/TextAppearance.Design.Hint"
        android:labelFor="@+id/folder"/>

    <Spinner
        android:id="@+id/folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</layout>